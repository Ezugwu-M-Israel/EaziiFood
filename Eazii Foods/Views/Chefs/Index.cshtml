<div class="container p-3">
    <div class="row pt-4 mt-5 ">
        <div class="col-6 offset-3">
            <h2 class="text-dark  btn-block text-center py-2" style="margin-top: 150px;">List Of Chefs And The Food They Have</h2>
            <span class="bg-dark text-white font-weight-bold">@*@ViewBag.Messag*@</span>
        </div>

    </div>
    <br /><br />

    @if(Model.Count() > 0) 
    {
        <table class="table-bordered  table-striped " style="width:100%">

            <thead class="btn-block">

                <tr>
                    <th class="text-center px-5">Name Of Chefs</th>
                    <th class="text-center px-5">Type Of Food</th>
                    <th class="text-center px-5">PhoneNumber</th>
                    <th class="text-center px-5">State</th>
                    <th class="text-center">Amount</th>
                    <th class="text-center px-5"> Action </th>
                </tr>

            </thead>

            <tbody>

               @foreach (var obj in Model)
               {
                 <tr>
                    <td width="10%" class="text-center">@obj.NameOfChefs</td>
                    <td width="10%" class="text-center">@obj.TypeOfFood</td>
                    <td width="10%" class="text-center">@obj.PhoneNumber</td>
                    <td width="5%" class="text-center">@obj.State.Name</td>
                    <td width="5%" class="text-center">@obj.Amount</td>
                    <td width="8%" class="text-center">
                        <div class="w-10 btn-group" role="group">
                              <a asp-controller="Chefs" asp-route-Id="@obj.Id" asp-action="Edit" class=" mx-5 bg-dark text-white">
                                    <i class="bi bi-pencil-square"></i>
                              </a>
                              <a asp-controller="Chefs" asp-route-Id="@obj.Id" asp-action="Delete" class="  mx-5 text-center bg-dark text-white">
                                    <i class="bi bi-trash-fill"></i>
                              </a>
                        </div>
                    </td>
                 </tr>  
                 
               }

            </tbody>

        </table>
    }
    else
    {
                                

    }

    <div class="col-6 text-center create offset-2 my-2">

        <a asp-controller="Chefs" asp-action="Create" role="button" class=" btn-block  rounded-pill text-center offset-3 px-5 py-2"><i class="bi bi-person-plus-fill"></i> Create Chefs Foods </a>

    </div>

</div>
