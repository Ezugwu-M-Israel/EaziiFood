@model Eazii_Foods.ViewModel.ChefsViewModel

@{
    ViewData["Title"] = "Create";
}


<form asp-controller="Chefs" asp-action="Create" method="post" enctype="multipart/form-data">

    <!--  Chefs Only  -->

    <div class="form-bg">
        <div class="container  mb-3 mt-5  p-5">
            <div class="row">
                <div class=" offset-3 col-md-6">
                    
                   <div class="form-horizontal  bg-dark shadow-lg">
                        <span class="heading text-white">CREATE</span>

                    <div class="form-group">

                            <select asp-items="@(new SelectList(@ViewBag.Users,"Id", "FirstName"))" class="form-control" asp-for="UserId" required type="text">select User</select>
                    </div>
                    <div class="form-group help">

                        <input id="TypeOfFood" type="text" class="form-control"  asp-for="TypeOfFood" required value="" placeholder="TypeOfFood">
                    </div>
                    <div class="form-group help">
                            <input id="Phone" type="text" class="form-control" asp-for="PhoneNumber" required value="" placeholder="+234-0916-7528-167">
                    </div>
                    <div class="form-group help">
                            <select asp-items="@(new SelectList(@ViewBag.State,"Id", "Name"))" class="form-control" asp-for="StateId" required type="text">select state</select>
                        </div>
                    <div class="form-group help">

                        <input id="Amount" type="text" class="form-control" asp-for="Amount" required value="" placeholder="Amount">
                    </div>

                    <div class="form-group help">
                        
                            <input class="form-control" type="file" id="image" asp-for="FoodImageUrl" required value="" />
                    </div>

                     <div class="form-group">
                                  
                        <div class="form-group row create">
                            <div class="col-8 offset-4 row">
                                <div class="col">
                                    <input asp-action="Create" type="submit" class="btn-block rounded-pill" value="Update" />
                                </div>
                                <div class="col">
                                    <a asp-action="Index" role="button" class=" btn-block  rounded-pill text-center offset-3 px-5 py-2">
                                        Back
                                    </a>

                                </div>
                            </div>
                        </div>
                     </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</form>

